<%include ../layouts/cabecera.ejs%>
        <br>
        <br>
        <a name="" id="" class="btn btn-primary" href="/libros/crear" type="button">crear nuevo libro</a>
        <br>
        <br>

        <table class="table table-light">
            
            <thead class="thead-dark"> 
                <tr>
                    <th>#</th>
                    <th>NOMBRE</th>
                    <th>IMAGEN</th>
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                <!-- ejsfor para hacer este for -->
                <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                    <tr>
                        <td> <%=libros[libro].id%></td>
                        <td> <%=libros[libro].nombre%> </td>

                        <td>
                            <img width="100" src="images/<%=libros[libro].imagen%>" class="img-thumbnail" alt="">
                           
                        </td>

                        <td align="center">

                             <div class="btn-group-vertical" role="group" aria-label="vertical button group">
                               
                                <form class="form-inline" method="post" action="/libros/editar/<%=libros[libro].id%>">
                                    <button type="submit" class="btn btn-warning">Editar</button>
                                </form>
                            </div>


                             <div class="btn-group-vertical" role="group" aria-label="vertical button group">
                                <form class="form-inline" method="post" action="/libros/eliminar/<%=libros[libro].id%>">
                                    <button type="submit" class="btn btn-danger">Borrar</button>
                                </form>
                                 
                             </div>
                            
                            
                        </td>
                    </tr>
                <% } %>
    
            </tbody>
        </table>
 <%include ../layouts/pie.ejs%>
